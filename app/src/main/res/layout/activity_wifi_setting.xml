<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hands.clean.activity.settings.WifiSettingActivity"
    android:orientation="vertical"
    android:divider="?attr/dividerHorizontal"
    android:showDividers="middle|end"
    >

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="와이파이 알림"
        android:padding="15dp"
        />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchNewDeviceWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새로운 기기 연결시 등록 알림"
        android:padding="15dp"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchEncryptionWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호가 있는 와이파이 연결시 알림"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/buttonTrackerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="15dp"
        android:gravity="start|center"
        android:text="등록된 와이파이 기기 관리"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="15dp"
        android:gravity="start|center"
        android:text="주변 와이파이 스캔해서 등록하기"
        />

</LinearLayout>