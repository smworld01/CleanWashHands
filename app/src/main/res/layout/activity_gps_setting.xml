<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hands.clean.activity.settings.gps.GpsSettingActivity"
    android:orientation="vertical"
    android:divider="?attr/dividerHorizontal"
    android:showDividers="middle|end"
    >


    <com.hands.clean.view.CustomSwitch
        android:id="@+id/switchGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentTitle="GPS 알림"
        app:contentContext="등록한 위치 접근 시 알림이 옵니다."
        />


    <com.hands.clean.view.CustomTextViewDescription
        android:id="@+id/buttonTrackerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="20dp"
        app:contentTitle="등록한 위치 관리"
        app:contentContext="앱에 등록한 위치를 관리합니다."
        />

    <com.hands.clean.view.CustomTextViewDescription
        android:id="@+id/buttonMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="20dp"
        app:contentTitle="지도에서 위치 등록하기"
        app:contentContext="지도에서 위치를 등록합니다."
        />

</LinearLayout>